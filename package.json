{
  "name": "aquanode-server",
  "description": "aquanode-server",
  "repository": "github:manolof/aquanode-server",
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "node": "^10.0.0",
    "npm": "^6.0.0"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "start:prod": "tsc && pm2 start ./dist/src/server.js",
    "start:dev": "cross-env NODE_ENV=development ./node_modules/nodemon/bin/nodemon.js -e ts -w ./src -x \"ts-node src/server.ts\"",
    "lint": "tslint src/**/*.ts --fix"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.3",
    "@types/node-schedule": "^1.2.2",
    "@types/supertest": "^2.0.6",
    "@types/winston": "^2.4.4",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "ds18b20": "^0.1.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "firebase-admin": "^6.1.0",
    "jest": "^23.6.0",
    "node-schedule": "^1.3.0",
    "nodemon": "^1.18.4",
    "pigpio-mock": "^0.0.1",
    "supertest": "^3.3.0",
    "tinygradient": "^0.4.1",
    "ts-jest": "^23.10.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.1.1",
    "winston": "^3.1.0"
  },
  "dependencies": {},
  "optionalDependencies": {
    "pigpio": "^1.1.2"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test|spec)\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html",
      "text-summary"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/app.ts",
      "<rootDir>/src/server.ts",
      "<rootDir>/src/logger.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts}"
    ]
  }
}
