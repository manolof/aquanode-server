{
  "name": "aquanode",
  "description": "aquanode",
  "version": "1.1.0",
  "license": "MIT",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "start:prod": "tsc && pm2 start ./dist/src/server.js",
    "start:dev": "cross-env NODE_ENV=development ./node_modules/nodemon/bin/nodemon.js -e ts -w ./src -x \"ts-node src/server.ts\"",
    "lint": "tslint src/**/*.ts --fix"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/cors": "^2.8.3",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.1",
    "@types/jest": "^21.0.0",
    "@types/node": "^9.4.6",
    "@types/node-schedule": "^1.2.2",
    "@types/winston": "^2.3.8",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "cross-env": "^5.1.1",
    "errorhandler": "^1.5.0",
    "express": "^4.15.4",
    "jest": "^21.0.0",
    "node-schedule": "^1.3.0",
    "nodemon": "^1.17.1",
    "pigpio-mock": "^0.0.1",
    "tinygradient": "^0.3.1",
    "ts-jest": "^21.0.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.7.2",
    "winston": "^2.4.0"
  },
  "dependencies": {},
  "optionalDependencies": {
    "pigpio": "^1.1.2"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test|spec)\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html",
      "text-summary"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/server.ts"
    ]
  }
}
